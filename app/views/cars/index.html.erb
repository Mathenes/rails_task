<p id="notice"><%= notice %></p>

<!-- <div class="container marketing"> -->

<% content_for :title do %>
<span class="label label-default">Cars</span>
<% end %>

<h1> Cars List </h1>

<div class="row">
  <div class="col-lg-12">

  <div class="row">
    <% @cars.each_with_index do |car,i| %>
      <div class="col-lg-3 col-xs-6 col-md-4">
        <div class="thumbnail">
          <%= image_tag car.image.url, class: "img-thumbnail" %>
          <div class="caption">
            <h3><%= car.name %></h3>
            <h4><%= car.model.manufacturer_name %></h4>
            <p><%= link_to 'View', car, {class:"btn btn-info", role:"button"} %>  <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger", role:"button" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  </div>
</div>
